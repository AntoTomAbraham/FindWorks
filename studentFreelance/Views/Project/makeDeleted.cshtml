@model studentFreelance.Models.Project

<form method="post" action="makeAllocated">
    <div class="row mb-3">
        <div class="col">
            <div class="form-outline">
                <label hidden class="form-label" for="title">Title</label>
                <input hidden readonly type="text" id="title" class="form-control" asp-for="title" />
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <label hidden class="form-label" for="amount" as>Amount</label>
                <input hidden readonly type="text" id="amount" class="form-control" asp-for="amount" />
            </div>
        </div>
    </div>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input hidden readonly type="email" disabled value="@User.Identity?.Name" id="form3Example3" class="form-control" asp-for="email" />
        <label hidden class="form-label" for="form3Example3">Email address</label>
    </div>

    <div class="form-outline mb-4">
        <input hidden type="desc" id="desc" class="form-control" asp-for="desc" />
        <label hidden class="form-label" for="desc">Description</label>
    </div>

    <div class="form-outline mb-4">
        <input hidden readonly type="number" id="deadline" class="form-control" asp-for="deadline" />
        <label hidden class="form-label" for="deadline">Description</label>
    </div>
    <div class="form-outline mb-4">
        <input hidden class="form-control" id="prID" asp-for="prID" readonly />
        <label hidden class="form-label" for="deadline">Description</label>
    </div>
    <div class="form-outline mb-4">
        <input hidden class="form-control" id="status" asp-for="status" />
        <label hidden class="form-label" for="deadline">Description</label>
    </div>
    <input type="checkbox">
    <input type="submit" />
</form>