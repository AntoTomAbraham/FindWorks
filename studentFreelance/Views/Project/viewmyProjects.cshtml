@{
}

@model IEnumerable<studentFreelance.Models.Project>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1>View Project</h1>

@foreach (var item in Model)
{
    if (item.email == @User.Identity?.Name && item.status == "true" ){
    <div class="card">
        <div class="card-header">
            @item.title
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.desc</h5>
            <p class="card-text">Project Deadline : @item.deadline</p>
            <p class="card-text">Project Budget   : @item.amount</p>
               
                <a asp-area="" asp-controller="Bid" asp-action="viewMybids" asp-route-id="@item.prID" class="btn btn-primary">View BIds</a>
                <a href="makeDeleted/@item.prID" class="btn btn-primary">Delete</a>
                <a href="makeAllocated/@item.prID" class="btn btn-primary">Mark Project as Allocated</a>
        </div>
    </div>
    <br />
}
}

